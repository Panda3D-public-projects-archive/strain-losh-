CREATE TABLE STR_PLAYER
 (ID NUMBER(15) NOT NULL
 ,EMAIL VARCHAR2(100) NOT NULL
 ,USERNAME VARCHAR2(30) NOT NULL
 ,PASSWORD VARCHAR2(50) NOT NULL
 )
/

CREATE TABLE STR_LEVEL
 (ID NUMBER(15) NOT NULL
 ,NAME VARCHAR2(50) NOT NULL
 ,DESCRIPTION VARCHAR2(500) NOT NULL
 ,MAP BLOB NOT NULL
 )
/

CREATE TABLE STR_GAME
 (ID NUMBER(15) NOT NULL
 ,LVL_ID NUMBER(15) NOT NULL
 ,ARMY_SIZE NUMBER(5) NOT NULL
 ,TURN_NUMBER NUMBER(5) NOT NULL
 ,ENGINE_STATE CLOB
 )
/

CREATE TABLE STR_GAME_PLAYERS
 (ID NUMBER(15) NOT NULL
 ,GAM_ID NUMBER(15) NOT NULL
 ,PLY_ID NUMBER(15) NOT NULL
 ,TEAM_ID NUMBER(15) NOT NULL --0=OBS PLAYER
 ,ON_TURN VARCHAR2(1)
 ,ORDER NUMBER(5) NOT NULL
 ,VICTORY_POINTS NUMBER(10) NOT NULL DEFAULT 0
 )
/

CREATE TABLE STR_GPL_MESSAGE
 (ID NUMBER(15) NOT NULL
 ,GPL_ID NUMBER(15) NOT NULL
 ,MESSAGE_ID NUMBER(5) NOT NULL
 ,MESSAGE CLOB NOT NULL
 ,TURN_NUMBER NUMBER(5) NOT NULL
 )
/
