			<dataselect id="soldier6" source="squad_data.squad" fields="name,cost" valuefield="name" formatter="frm"></dataselect>
			<dataselect id="soldier7" source="squad_data.squad" fields="name,cost" valuefield="name" formatter="frm"></dataselect>
			<dataselect id="soldier8" source="squad_data.squad" fields="name,cost" valuefield="name" formatter="frm"></dataselect>
		</div>
